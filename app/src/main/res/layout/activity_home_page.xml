<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#89CFF0"
    android:layout_height="match_parent"
    tools:context=".ui.activity.expenses.HomePage">

    <TextView
        android:id="@+id/totalItem"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/white"
        android:ems="10"
        android:textSize="@dimen/_22sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:padding="@dimen/_10sdp"
        android:onClick="calculate"
android:textStyle="italic"
        android:textColor="@color/black"
        android:hint="Your Total Expense "
        android:inputType="textPersonName"
   />

    <TextView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:id="@+id/totalImage"
        android:gravity="center"
        android:textSize="@dimen/_22sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/_34sdp"
android:background="@drawable/roundedtexttview"
        android:textColor="@color/black"
        ></TextView>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="Click For Report"
        android:layout_marginTop="@dimen/_20sdp"
    />


    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="Show Expenses"
        android:onClick="evaluate"
        android:layout_marginTop="@dimen/_20sdp"

        />

</LinearLayout>