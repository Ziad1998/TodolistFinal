<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#211D44"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.activity.stopwatch.StopWatchEnd">


<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_240sdp"
    >

    <ImageView
        android:id="@+id/bgcircle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:src="@drawable/bgcircle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icanchor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:src="@drawable/icanchor"
        android:layout_marginBottom="@dimen/_32sdp"
 />
</FrameLayout>

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_30sdp"
        android:layout_marginEnd="8dp"

        android:textColor="#FFF"
        android:textSize="62dp"
      />

    <Button
        android:id="@+id/btnstart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:backgroundTint=" #f39c12 "
        android:text="Start"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="@dimen/_20sdp"
    />

    <Button
        android:id="@+id/btnstop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#FF21AA9A"
        android:backgroundTint=" #F00 "
        android:text="Stop"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="@dimen/_20sdp"/>

</LinearLayout>